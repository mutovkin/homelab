# Observability Stack Environment Variables
# Copy this file to .env and fill in your actual values
# Generate secure passwords with: openssl rand -hex 32

# System Configuration
TIMEZONE=America/Los_Angeles

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password-here

# VictoriaMetrics Authentication (optional but recommended for security)
VM_AUTH_USERNAME=obs
VM_AUTH_PASSWORD=your-secure-vm-password-here

# VictoriaLogs Authentication (optional but recommended for security)
VL_AUTH_USERNAME=obs
VL_AUTH_PASSWORD=your-secure-vl-password-here

# Resource Limits (adjust based on your available RAM)
# Recommended total for N100 homelab: ~6-8GB for entire stack
# These limits prevent OOM crashes and resource exhaustion
VM_MEMORY_LIMIT=2G        # VictoriaMetrics (metrics database)
VL_MEMORY_LIMIT=1G        # VictoriaLogs (log database)
VECTOR_MEMORY_LIMIT=512M  # Vector (log collector)
TELEGRAF_MEMORY_LIMIT=256M  # Telegraf (metrics collector)
GRAFANA_MEMORY_LIMIT=1G   # Grafana (visualization)

# Network Configuration (for Telegraf SNMP monitoring)
ROUTER_IP=192.168.1.1     # Your router/gateway IP address
SNMP_COMMUNITY=public     # SNMP community string (CHANGE THIS for security!)